<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sgu.univer.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.sgu.univer.app.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.GroupListActivity"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.CreateStudentActivity"
            android:label="@string/title_activity_create_student" >
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.StudentActivity"
            android:label="@string/title_activity_student" >
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.EditStudentActivity"
            android:label="@string/title_activity_edit_student" >
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.RatingActivity"
            android:label="@string/title_activity_rating" >
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.choActivity"
            android:label="@string/title_activity_cho" >
        </activity>
        <activity
            android:name="ru.sgu.univer.app.activity.SchActivity"
            android:label="@string/title_activity_sch" >
        </activity>
    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
